			public void actionPerformed(ActionEvent arg0) {
				lblThisIsText.setText("Thank you for your pizza");
				JOptionPane.showMessageDialog(null, "well done");
			}
		});
		contentPane.setLayout(null);
		contentPane.add(btnpizzaFinished);
		

	}
