package Ex1;

import javax.swing.JOptionPane;

public class counting {
	public static void main(String[] args){
		read();
	}
	public static void read(){
		String text=JOptionPane.showInputDialog(null,"please input the text");
		char[] textarray =text.toCharArray();
		char[] alphbet ={'a','b','c','d','e'};
		int[] counting= new int [26];
	
		for(char n: textarray) {
			
			for (int i = 0; i<alphbet.length; i++){
				if (n == alphbet[i]) {
					counting[i]++;
					
				}
			//private static char[] readChars(){
			//	char [] output = new char[place];
			//	System.arraycopy(counting,0,output,0,place);
			//	return output;
			//}
			//char[] output =readChars();
			//for (char c: output)
			//	System.out.println();
			//}
		for(int o :counting) System.out.println(o);
				
			}
		}
			
	}
}
